# ===========================================
# ListKit GTM Intelligence Platform - Environment Variables
# ===========================================

# ----------------
# Database (Supabase)
# ----------------
DATABASE_URL=postgresql://user:password@host:port/database

# ----------------
# Phase 1 - Active Now
# ----------------
INTERCOM_API_KEY=your_intercom_api_key_here

# ----------------
# Airtable (AM Assignments & Segmentation)
# ----------------
# AIRTABLE_API_KEY=patXXXXXXXXXXXXXX
# AIRTABLE_BASE_ID=appXXXXXXXXXXXXXX
# AIRTABLE_CUSTOMERS_TABLE=Customers
# AIRTABLE_AM_TABLE=Account Managers

# ----------------
# Phase 2 - CRM & Scheduling
# ----------------
# HUBSPOT_API_KEY=your_hubspot_api_key_here
# CALENDLY_API_KEY=your_calendly_api_key_here

# ----------------
# Phase 3 - Product Analytics & Calls
# ----------------
# USERFLOW_API_KEY=your_userflow_api_key_here
# FATHOM_API_KEY=your_fathom_api_key_here
# LISTKIT_DB_URL=postgresql://user:password@host:port/listkit_prod

# ----------------
# Phase 4 - Advanced Revenue Analytics
# ----------------
# CHARTMOGUL_API_KEY=your_chartmogul_api_key_here
# STRIPE_API_KEY=your_stripe_api_key_here

# ----------------
# Notifications
# ----------------
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# ----------------
# AI (for chat interface - future)
# ----------------
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ----------------
# Application Settings
# ----------------
# Environment: development, staging, production
ENVIRONMENT=development

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# Sync Schedule (cron expressions)
SYNC_SCHEDULE_INTERCOM=0 */6 * * *  # Every 6 hours
# SYNC_SCHEDULE_HUBSPOT=0 */12 * * *  # Every 12 hours
# SYNC_SCHEDULE_CALENDLY=0 */4 * * *  # Every 4 hours

# Alert Thresholds
ALERT_CHURN_RISK_THRESHOLD=70  # Send alert if churn risk > 70%
ALERT_HEALTH_DROP_THRESHOLD=20  # Send alert if health drops by > 20 points

# Data Quality
MIN_DATA_QUALITY_SCORE=60  # Minimum acceptable data quality score
